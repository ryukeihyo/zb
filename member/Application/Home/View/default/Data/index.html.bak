<extend name="_Layout/main"/>

<block name="style">
    <style type="text/css">
        /* 文章列表样式 */
        .article-list .media {
            padding-top: 10px;
            border-top: 1px solid #eee;
        }
        .article-list .list-cover{
            width: 180px;
            height: 100px;
        }
        .article-list .list-title{
            margin-top: 6px;
        }
        .article-list .list-abstract{
            height: 42px;
            overflow: hidden;
            text-overflow: ellipsis;
        }
        @media (max-width: 768px) {
            .article-list .list-title{
                font-size: 14px;
                margin: 0px;
            }
            .article-list .list-cover{
                width: 90px;
                height: 66px;
            }
            .article-list .list-info {
                font-size: 10px;
                margin-top: 3px !important;
                margin-bottom: 2px !important;
            }
            .article-list .list-abstract{
                height: 36px;
                font-size: 12px;
            }
        }
    </style>
</block>

<block name="main">
    <div class="nrcx">
            	<div class="nrcx_top"><p>注册列表</p></div>
                
                <div class="zclb">
                	<table cellpadding="0" cellspacing="0" class="zclb1">
                    	<tr>
                        	<td >当日新增开通</td>
                            <td><input type="text" value="{$dnum}" readonly /></td>
                            <td>&nbsp;&nbsp;月开通数量累计</td>
                            <td><input type="text" value="{$ynum}" readonly /></td>
                            <td>&nbsp;&nbsp;总开通数量累计</td>
                            <td><input type="text" value="{$num}" readonly /></td>
                        </tr>
                        
                        <tr>
                        	<td colspan="6" class="pt1">
							<form action="" method="post">
                            按<select><option value="">会员编号</option></select><input type="text" name="username" /><input type="submit" value="查询" style="width:41px; height:27px; background:url(__PUBLIC__/images/cz.jpg) no-repeat; border:none;font-size:14px; color:#fff;"/>&nbsp;从<input type="text" class="" id="demo" name="starttime" style="width:90px;" />&nbsp;到<input type="text" name="endtime" class="" id="demo2" style="width:90px;"/><input type="submit" value="查询" style="width:41px; height:27px; background:url(__PUBLIC__/images/cz.jpg) no-repeat; border:none;font-size:14px; color:#fff;"/><input type="submit" value="导出表单" style="width:101px; height:28px; background:url(__PUBLIC__/images/dc.jpg) no-repeat; border:none;font-size:14px; color:#000;"/>
							</form>
                            </td>
                        </tr>
                    </table>
                    
					
					
					<table cellpadding="0" cellspacing="0" class="biao1" style="border-collapse:collapse;">
                    	<tr>
                        	<th>序号</th>
                            <th>卡号</th>
                            <th>姓名</th>
                            <th>手机</th>
                            <th>消费顾问</th>
                            <th>服务电话</th>
                            <th>注册时间</th>
                        
                        </tr>
                        
						
						 <volist name="volist" id="vo" empty="$empty">
                        <tr>
                        	<td>{$i}</td>
                            <td>{$vo.username}</td>
                            <td>{$vo.realname}</td>
                            <td>{$vo.mobile}</th>
                            <td>泽百通</td>
                            <td>400-0066-406</td>
                            <td>{$vo.ctime|time_format='Y-m-d'}</td>
                            
                        </tr>
                        </volist>
						
						
                        
                        
                     
                        
                       
                           
                    </table>
					
					
					
					
					
					
         
                    <div class="fy">
                    	<p>{$page}</p>
                    </div>
                </div>
            </div>
			
			
			<script>
			function editStatus(objid,objstatus){
			
				$.post("{:U('Home/Data/ajax')}", { id: objid, status: objstatus },
			   function(data){
				 if(data==1){
					alert('操作成功');
				 }else{
					alert("已经是该状态了，无需再次操作");
				 }
			   });
			
			}
			</script>
</block>
