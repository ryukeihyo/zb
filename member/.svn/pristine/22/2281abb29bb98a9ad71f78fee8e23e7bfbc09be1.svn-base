.noshow {
    display: none;
}

/* ----------------- 行政地区选择 ------------*/
#regionalism_select_box select {
    width: 170px;
    display: block;
}


/* ------------------------------------------ */
/* 左侧栏版块 */
#ledger_side_box {
    clear: both;
    float: left;
    width: 15%;
}
#ledger_nav {

}
#ledger_nav  ul{
    margin: 0;
    padding: 0;
}
#ledger_nav li {
    list-style: none;
    text-align: center;
    background-color:  #15afef;
    margin: 5px;
}
#ledger_nav li a {
    color: white;
    display: block;
    padding: 10px;
}
/*  主版块   */
#ledger_box {
    float: right;
    width: 85%;
}
#ledger_tool_box {
    position: relative;

}
/* 查询表单区块 */
#search_tools_box {
    width: 80%;
    float: left;
    border: 1px solid #15afef;
    position: relative;
    -moz-border-radius: 10px;
    -webkit-border-radius: 10px;
    border-radius: 10px;
}

ul#search_input_list {
    width: 70%;
    float: left;
}
#search_input_list li {
    list-style: none;
    margin: 0;
    padding: 5px;
}
#search_input_list li input {
    margin: 0 8px;
}
#button_deadline span {
    background-color: #15afef;
    color: white;
    display: inline-block;
    padding: 4px 8px;
    font-size: 12px;
    cursor: pointer;
    -moz-border-radius: 4px;
    -webkit-border-radius: 4px;
    border-radius: 4px;
}
#button_deadline span:hover {
    -moz-box-shadow: 2px 2px 2px #000000;
    -webkit-box-shadow: 2px 2px 2px #000000;
    box-shadow: 2px 2px 2px #000000;
}

#button_search {
    height: 50px;
    width: 80px;
    /*float: right;*/
    background-color: #049E42;
    line-height: 50px;
    text-align: center;
    color: white;
    margin: 35px 10px auto 10px;
    cursor: pointer;
    position: absolute;
    right: 10px;
    top: 19px;
    -moz-border-radius: 4px;
    -webkit-border-radius: 4px;
    border-radius: 4px;
}
#button_search:hover {
    -moz-box-shadow: 4px 4px 2px #000000;
    -webkit-box-shadow: 4px 4px 2px #000000;
    box-shadow: 4px 4px 2px #000000;
}
#button_export_data {
    height: 50px;
    width: 80px;
    position: absolute;
    right: 10px;
    top: 55px;
    /*float: right;*/
    background-color: #FF8C0B;
    line-height: 50px;
    text-align: center;
    color: white;
    vertical-align: middle;
    /*margin: 40px 10px auto auto;*/
    cursor: pointer;
    -moz-border-radius: 4px;
    -webkit-border-radius: 4px;
    border-radius: 4px;
}
#button_export_data:hover {
    -moz-box-shadow: 4px 4px 2px #000000;
    -webkit-box-shadow: 4px 4px 2px #000000;
    box-shadow: 4px 4px 2px #000000;    
}
#search_info {
    clear: both;
}

/* 子栏目导航菜单  */
.ledger_tabs {
    clear: both;
    width: 100%;
    float: left;
}
.ledger_tabs ul {
    height: 37px;
    margin: 20px 0px;
    padding: 0pz;
    clear: both;
    border-bottom: 2px solid #076F9B;
}
.ledger_tabs li {
    letter-spacing: 5px;
    margin: 0px 1px;
    font-weight: bold;
    float: left;
    list-style: none;
    background-color: #F9F9F9;
    border: 1px solid #15afef;;
    border-bottom: none;
    -moz-border-radius: 4px 4px 0px 0px;
    -webkit-border-radius: 4px 4px 0px 0px;
    border-radius: 4px 4px 0px 0px;
}
.ledger_tabs li a {
    padding: 8px 16px;
    text-decoration: none;
    display: block;
    color: #15afef;
}
.ledger_tabs li a:hover {
    -moz-box-shadow: 2px -2px 2px #000000;
    -webkit-box-shadow: 2px -2px 2px #000000;
    box-shadow: 2px -2px 2px #000000;  
}
.ledger_tabs li.current {
    background-color: #076F9B;
    color: white;
    font-size: 18px;
    -moz-box-shadow: 2px -2px 2px #000000;
    -webkit-box-shadow: 2px -2px 2px #000000;
    box-shadow: 2px -2px 2px #000000;  
}
.ledger_tabs li.current a {
    cursor: default;
    color: white;
}

/*  总帐表内容区   */
.ledger_panes {
    clear: both;
    width: 100%;
}
.ledger_panes table {
    border-collapse: collapse;
    /*border: 1px solid #7BD2F7;*/
    width: 100%;
    padding: 0;
    margin: 0;
}
.ledger_panes tr ,  .ledger_table tr {
    margin: 0;
    padding: 0;
}
.ledger_panes th ,  .ledger_table th {
    border: 1px solid #7BD2F7;
    background-color: #15afef;
    color: white;

    padding: 8px;
    margin: 0;
}
.ledger_panes td ,  .ledger_table td {
    border: 1px solid #7BD2F7;
    font-size: 14px;
    line-height: 20px;
    padding: 8px;
    margin: 0;    
}
.ledger_panes tr:nth-child(2n+0) {
    background-color: #F9F9F9;
}
.ledger_panes tr>td:nth-child(1) {
    max-width: 2em;
    text-align: center;
} 
.ledger_panes tr>td:nth-child(n+5) {
    text-align: right;
}

.ledger_panes ul {
    margin: 0;
    padding: 0;
}
.ledger_panes li {
    list-style: none;
}

/* 分页导航组件 */
#page_list_box ul{
    margin: 0;
    padding: 14px;
    clear: both;
    width: 60%;
    float: left;
}
#page_list_box li {
    display: inline-block;
    margin: 4px 0px;
    padding: 0;
    background-color:  #15afef;
    font-weight: bold;
    color: white;
}
#page_list_box li:hover {
    background-color: #076F9B;
}
#page_list_box li  a {
    display: block;
    text-decoration: none;
    color: white;
    padding: 4px 8px;
    margin: 0;
}
#page_list_box li.current {
    background-color: white;
    border: 1px solid  #15afef;
}
#page_list_box li.current a {
    padding: 3px 7px;
    color:  #15afef;
    cursor: default;
}

#go_page_box {
    width: 160px;
    float: right;
    margin: 18px 0px;
    padding: 4px 8px;
}
#go_page_num {
    width: 40px;
}


/*  ------------       会员数量页        ---------------   */
#MN_total {
    margin: 10px 0px;
    float: left;
}
#MN_total table {
    border-collapse: collapse;
    margin: 0;
    padding: 0;
}

/* ---------- 弹出提示框 ------------ */
#pop_box {
    position: fixed;
    width: 500px;
    height: 100px;
    top:50%;
    left: 50%;
    border: 1px solid #076F9B;
    margin: -100px auto auto -250px;
    padding: 10px;
    background-color: white;

    -moz-border-radius: 4px;
    -webkit-border-radius: 4px;
    border-radius: 4px;

    -moz-box-shadow: 4px 4px 2px #000000;
    -webkit-box-shadow: 4px 4px 2px #000000;
    box-shadow: 4px 4px 2px #000000;   

    display: none;
}
.pop_box_close_button {
    position: absolute;
    top:10px;
    right: 10px;
    border: 1px solid #000000;
    width: 20px;
    text-align: center;
    cursor: pointer;
    background-color: red;
    -moz-border-radius: 4px;
    -webkit-border-radius: 4px;
    border-radius: 4px;
    color: white;
}