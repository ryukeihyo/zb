<extend name="_Layout/main"/>

<block name="title"><title>{:C('WEB_SITE_TITLE')}－{:C('WEB_SITE_SLOGAN')}</title></block>

<block name="breadcrumb"></block>

<block name="style">
    <style type="text/css">
        .main-nav {
            margin-bottom: 0px;
        }
        #my-slide {
            margin-bottom: 20px;
        }
        #my-slide .slider1 .btn-default-inverse:hover,
        #my-slide .slider1 .btn-default-inverse.hover,
        #my-slide .slider1 .btn-default-inverse.active {
            color: #65b72f;
        }
        #my-slide .slider2 .btn-default-inverse:hover,
        #my-slide .slider2 .btn-default-inverse.hover,
        #my-slide .slider2 .btn-default-inverse.active {
            color: #047ecc;
        }
        .feature-title {
            margin-bottom: 15px;
        }
        .feature-list .thumbnail .lazy{
            width: 100%;
            height: 126px;
        }
        .feature-list .thumbnail .caption p{
            height: 80px;
            overflow: hidden;
        }
        @media (max-width: 768px) {
            #my-slide .btn {
                margin-bottom: 8px;
            }
            .feature-list .thumbnail .caption p{
                height: auto;
            }
        }
    </style>
</block>

<block name="script">
    <script type="text/javascript" src="__PUBLIC__/libs/jquery_devrama_slider/jquery.devrama.slider.js"></script>
    <script type="text/javascript">
        $(function(){
            $('#my-slide').DrSlider({
                width: '100%',
                height: '500px',
                userCSS: false,
                transitionSpeed: 1000,
                duration: 8000,
                transition: 'random',
                showNavigation: true,
                navigationType: 'circle',
                positionNavigation: 'in-center-bottom',
                navigationColor: 'rgb(223,223,223)',
                navigationHoverColor: '#00A4FF',
                navigationHighlightColor: '#00A4FF',
                showProgress: true,
                progressColor: '#fff',
                pauseOnHover: true
            });
        });
    </script>
</block>

