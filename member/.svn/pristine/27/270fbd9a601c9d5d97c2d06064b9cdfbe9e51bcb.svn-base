	$("#zebaib_app").click(function(){
	
		$.post("{:U('Home/System/wap')}", { ajax: 1, paymethod: "zebaib",jifen:$("input[name='jifen']").val(),stel:"{$info.mobile}",fee:$("input[name='fee']").val(),username:$("#username").val(),app:1 },
	   function(data){
		
		 if(data>0){
			alert('操作成功！');
		 }else if(data==-1){
			alert('泽百币不足!');
		 }
		
	   });
	
	} )
	
	
	//监控
	
	
	
	
	
	var t=setInterval(function(){
	
	
	
	
	if($("#username").val()!=''){
	
		$.getJSON("{:U('Home/Interface/process')}",{mobile:$("#username").val()},function(json){
			 
		
		
			if(json.status==0&&json.process_scuess!=1){
			
				$.getJSON("{:U('Home/Interface/process_scuess')}",{mobile:$("#username").val()});
			
				alert("会员【"+json.mobile+"】已经完成支付！");
				window.location.reload();
				
			}else if(json.status==2&&json.process_scuess!=1){
				$.getJSON("{:U('Home/Interface/process_scuess')}",{mobile:$("#username").val()});
				alert("会员【"+json.mobile+"】已经取消支付！");
				window.location.reload();
				
			}
	
	
	
		})
	
	}

	},3000);
	
	
	
	
	

})
</script>
